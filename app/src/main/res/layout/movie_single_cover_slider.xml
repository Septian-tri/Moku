<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp">

    <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/movieImageCoverSlider"
            android:layout_width="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:layout_height="320dp"/>

    <TextView
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@color/transparent_deep_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieTitleImageCoverSlider"/>

    <FrameLayout
            android:textAlignment="center"
            android:background="#8F030319"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
            style="@style/singleMovieCoverTextDetail"
            android:layout_gravity="end"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieRatingTextImageSlider"/>

        <TextView
            style="@style/singleMovieCoverTextDetail"
            android:layout_gravity="start"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addtionalMovieTxtImageCoverSlider"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="35dp"
            android:layout_gravity="end|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBar"
            style="?attr/ratingBarStyleSmall"/>

    </FrameLayout>


</RelativeLayout>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Moku" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/deeper_blue_2</item>
    </style>

    <style name="singleMovieCoverTextDetail" parent="Theme.AppCompat">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">25px</item>
    </style>

    <style name="HorizontalTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/deeper_blue</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
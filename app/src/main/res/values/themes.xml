<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Moku" parent="Theme.AppCompat">
        <item name="actionBarTheme">@style/CustomToolbarTheme</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:backgroundTintMode">@color/yellow_orange</item>
        <item name="tint">@color/yellow_orange</item>
        <item name="android:numStars">0</item>
        <item name="android:stepSize">0.25</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="singleMovieCoverTextDetail" parent="Theme.AppCompat">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">25px</item>
    </style>

    <style name="CustomToolbarTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textSize">1dp</item>
    </style>

    <style name="HorizontalTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/deeper_blue</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>